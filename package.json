{
	"name": "next",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ci": "vitest run --runInBand --reporter=junit",
		"test:component": "cypress run --component",
		"test:all": "pnpm lint && pnpm test && pnpm test:e2e",
		"test:e2e": "cypress run --browser electron --headless",
		"lint": "next lint",
		"prepare": "husky",
		"deploy:core": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"deploy": "bash scripts/deploy-with-tg.sh",
		"upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"drizzle:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"drizzle:migrate": "wrangler d1 migrations apply reset_myself --local",
		"drizzle:migrate:remote": "wrangler d1 migrations apply reset_myself --remote",
		"drizzle:push": "wrangler d1 migrations apply reset_myself --remote",
		"drizzle:seed": "tsx scripts/seed.ts",
		"drizzle:seed:remote": "tsx scripts/seed.ts --remote"
	},
	"dependencies": {
		"@cloudflare/next-on-pages": "^1.13.16",
		"@libsql/client": "^0.15.15",
		"@opennextjs/cloudflare": "^1.14.2",
		"@supabase/auth-ui-react": "^0.4.7",
		"@supabase/auth-ui-shared": "^0.1.8",
		"@supabase/ssr": "^0.8.0",
		"dayjs": "^1.11.19",
		"drizzle-orm": "^0.38.4",
		"drizzle-seed": "^0.3.1",
		"lucide-react": "^0.474.0",
		"next": "15.5.7",
		"react": "19.1.2",
		"react-dom": "19.1.2",
		"strnum": "^1.0.5"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^4.0.15",
		"cypress": "^15.7.1",
		"drizzle-kit": "0.31.8",
		"esbuild": "^0.25.0",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"husky": "9",
		"sql.js": "^1.13.0",
		"supertest": "^7.1.4",
		"tailwindcss": "^4",
		"tsx": "^4.19.1",
		"typescript": "^5",
		"vitest": "^4.0.15",
		"wrangler": "^4.53.0"
	},
	"pnpm": {
		"overrides": {
			"esbuild": "0.25.0"
		}
	}
}
